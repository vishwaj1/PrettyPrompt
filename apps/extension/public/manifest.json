{
    "name": "PrettyPrompt Overlay",
    "description": "Live prompt suggestions while you type on ChatGPT, Claude, Geminiâ€¦",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://*.prettyprompt.ai/*"],
    "background": { "service_worker": "sw.js" },
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/*",
          "https://claude.ai/*",
          "https://gemini.google.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "PrettyPrompt",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    }
  }
  